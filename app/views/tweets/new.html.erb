<% if @tweet.errors.present? %>
    <h3>エラーがあります。</h3>
    <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @tweet, url: {action: :create} do |form| %>
    <%= form.label :message, 'メッセージ' %>
    <%= form.text_field :message %>
    <%= form.submit 'ツイート' %>
<% end %>